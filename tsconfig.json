{
  "compilerOptions": {
    "module": "nodenext",
    "lib": ["esnext"],

    "erasableSyntaxOnly": true,
    "verbatimModuleSyntax": true,
    "isolatedDeclarations": true,
    "declaration": true,

    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "skipLibCheck": true,

    "strict": true
  },
  "exclude": ["./benchmark/typescript-eslint"]
}
