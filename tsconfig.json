{
  "compilerOptions": {
    "module": "nodenext",

    "erasableSyntaxOnly": true,
    "verbatimModuleSyntax": true,
    "isolatedDeclarations": true,
    "declaration": true,

    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "skipLibCheck": true,

    "strict": true
  },
  "exclude": ["./benchmark/typescript-eslint"]
}
